#include <stdio.h>

struct Student {
    char name[50];
    int roll;
    float marks;
};

int main() {
    struct Student s;
    fgets(s.name, sizeof(s.name), stdin);
    scanf("%d %f", &s.roll, &s.marks);

    printf("Name: %s", s.name);
    printf("Roll: %d\n", s.roll);
    printf("Marks: %.2f\n", s.marks);

    return 0;
}

/*
Input:
John
101 95.5

Output:
Name: John
Roll: 101
Marks: 95.50
*/
