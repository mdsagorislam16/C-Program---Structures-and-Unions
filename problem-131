#include <stdio.h>
#include <string.h>

struct Student {
    char name[50];
    int roll;
    int age;
};

int main() {
    struct Student s[3];
    for(int i=0;i<3;i++){
        fgets(s[i].name,50,stdin);
        s[i].name[strcspn(s[i].name,"\n")]=0;
        scanf("%d %d",&s[i].roll,&s[i].age);
        getchar();
    }

    int choice;
    scanf("%d",&choice); // 1=roll, 2=age

    for(int i=0;i<3-1;i++){
        for(int j=i+1;j<3;j++){
            if((choice==1 && s[i].roll>s[j].roll) || (choice==2 && s[i].age>s[j].age)){
                struct Student temp = s[i];
                s[i]=s[j];
                s[j]=temp;
            }
        }
    }

    for(int i=0;i<3;i++)
        printf("%s %d %d\n",s[i].name,s[i].roll,s[i].age);

    return 0;
}

/*
Input:
John
101 20
Alice
102 19
Bob
103 21
2

Output:
Alice 102 19
John 101 20
Bob 103 21
*/
